@{
    PageData["title"] = "Race";
}
<h2>{{race.Name}}</h2>

<h4>Escalões:</h4>
<win-list-view class="win-listview_small win-selectionstylefilled"
               item-data-source="ageRankData" selection="ageRankSelection" selection-mode="mode.selectionMode" tap-behavior="mode.tapBehavior"
               on-item-invoked="ageRankClicked($event)">
    <win-item-template>
        <div class="">
            <div class="">
                <h6>{{item.data.Name}}</h6>
            </div>
        </div>
    </win-item-template>
    <win-grid-layout orientation="vertical" maximum-rows-or-columns="3"></win-grid-layout>
</win-list-view>

<h4>Resultados:</h4>

<win-list-view class="win-selectionstylefilled"
               item-data-source="resultsData" selection-mode="gridMode.selectionMode" tap-behavior="gridMode.tapBehavior">
    <win-item-template>
        <div class="">
            <div class="">
                <h6>{{item.data.Athlete.Name}}</h6>
            </div>
        </div>
    </win-item-template>
    <win-grid-layout orientation="vertical"></win-grid-layout>
</win-list-view>